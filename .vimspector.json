{
  "configurations": {
    "Launch currently open script": {
      "adapter": "vscode-php-debug",
      "breakpoints": {
        "exception": {
          "Notice": "",
          "Warning": "",
          "Error": "",
          "Exception": "",
          "*": ""
        }
      },
      "configuration": {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9000
      }
    },
    "Listen for XDebug": {
      "adapter": "vscode-php-debug",
      "breakpoints": {
        "exception": {
          "Notice": "",
          "Warning": "",
          "Error": "",
          "Exception": "",
          "*": ""
        }
      },
      "configuration": {
        "name": "Listen for XDebug",
        "type": "php",
        "request": "launch",
        "port": 9000,
        "stopOnEntry": false,
        "pathMappings": {
          "/var/www/html": "${workspaceRoot}"
        }
      }
    }
  }
}
